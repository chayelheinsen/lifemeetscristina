<nav class="header">
  <%= link_to("Featured", home_index_path, class: current_class?(home_index_path)) %>
  <%= link_to("About Me", about_index_path, class: current_class?(about_index_path)) %>
  <%= link_to(image_tag("logo.png", class: "logo"), home_index_path) %>
  <%= link_to("Blogs", posts_path, class: current_class?(posts_path)) %>
  <%= link_to("Subscribe", "#", id: "subscribe-button") %>
</nav>

<div id="subscribe-modal" class="subscribe-modal">
  <div class="modal-content">
    <span class="close" id="close">&times;</span>

    <link href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">
    <style type="text/css">
      #mc_embed_signup{clear:left; font:14px "Lato"; margin-top: 25px; }
    </style>
    <div id="mc_embed_signup">
      <form action="https://lifemeetscristina.us17.list-manage.com/subscribe/post?u=54bea33e0e9a0a136da17b0e9&amp;id=b0048eb6db" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
        <div id="mc_embed_signup_scroll">
          <p>Let's be friends! Subscribe to LifeMeetsCristina!</p>
          <div class="mc-field-group">
            <label for="mce-EMAIL">Email Address </label>
            <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL">
          </div>
          <div id="mce-responses" class="clear">
            <div class="response" id="mce-error-response" style="display:none"></div>
            <div class="response" id="mce-success-response" style="display:none"></div>
          </div>
          <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_54bea33e0e9a0a136da17b0e9_b0048eb6db" tabindex="-1" value=""></div>
          <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button subscribe-submit"></div>
        </div>
      </form>
    </div>


  </div>
</div>

<script type="text/javascript">
  var button = document.getElementById('subscribe-button');

  button.addEventListener("click", function(event) {
    event.preventDefault();

    var modal = document.getElementById('subscribe-modal');
    modal.style.display = 'block';

    var close = document.getElementById('close');
    close.addEventListener("click", function(event) {
      modal.style.display = 'none';
    });

    window.onclick = function(event) {
      if (event.target == modal) {
          modal.style.display = "none";
      }
    }
  });
</script>
